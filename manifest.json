{
    "manifest_version": 3,
    "name": "MessagePack DevTools Unpacker",
    "version": "1.0",
    "description": "Unpacks MessagePack payloads into JSON inside DevTools.",
    "background": {
      "service_worker": "js/background.js",
      "type": "module"
    },
    "devtools_page": "html/devtools.html",
    "icons": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "msgpack-unpacker@yourdomain.com"
      }
    }
  }
